extends ../../layouts/default.pug
block main 
  h1(class="mb-4") Tài khoản của tôi
  if(user.avatar)
    img(src=user.avatar alt=user.fullName width="150px" class="mb-3")
  if(user.fullName)
    p Họ và tên: <b>#{user.fullName}</b>
  if(user.email)
    p Email: <b>#{user.email}</b>
  if(user.phone)
    p Số điện thoại: <b>#{user.phone}</b>
  p 
    span Trạng thái: 
    span
      <b>#{user.status==="active"?"Hoạt động":"Dừng hoạt động"}</b>
  if(role.title)
    p Phân quyền: <b>#{role.title}</b>
  a(href=`${prefixAdmin}/my-account/edit` class="btn btn-primary ") Chỉnh sửa